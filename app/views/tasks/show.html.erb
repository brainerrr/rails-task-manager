<h1><%=@task.title%></h1>
<h3><%= @task.details %></h3>
<% if @task.completed %>
<p><%= 'This task is completed' %></p>
<% else %> <p><%='This task is not completed yet'%></p>
<% end %>
<p><%= link_to 'Edit task', edit_task_path %></p>
<p><%= link_to 'Delete task', task_path, method: :delete, data: { confirm: "Are you sure? Really? Sure?"} %></p>
<p><%= link_to 'Back to list', tasks_path %></p>
